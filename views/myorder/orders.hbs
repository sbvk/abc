        <th>Item</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Added On</th>
        </tr>
    </thead>
    <tbody> <script type="text/javascript"> var i=1; </script>
        {{#each orders}} 
        
<tr><script type="text/javascript">for( ;i<=orders.length;i++)</script>
 <td><script type="text/javascript">  {
    document.write(i); i++;
     }</script></td>
 <td>{{#each this.items}}{{this.item.name}}{{/each}}</td> 
<td><img src="data:img/fbx;base64,{{#each this.items}}{{#each this.item.img.base}}{{this}}{{/each}}{{/each}}"  height="100" width="100">
   </td>
  <!-- <td>{{#each this.items}}{{#each this.item.img.base.data}}{{this}}{{/each}}{{/each}}</td>-->
 <td>{{#each this.items}}{{this.item.price}}{{/each}}</td>
 <td>{{#each this.items}}{{this.qty}}{{/each}}</td>
 <td>{{#each this}}{{this.date}}{{/each}}</td>
</tr>{{/each}}</tbody>
</table><br>

