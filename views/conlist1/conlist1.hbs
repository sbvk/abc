<body>
   <nav class="navbar navbar-dark navbar-expand-sm fixed-top">
        <div class="col-10 col-sm-10" style="text-align: center;">
            <h1 class="word"> Contact Us List</h1></div>
            <div class="col-2 col-sm-2">
             <a href="/ind1/dashboard1" class="btn btn-primary">Back</a></div> </nav>
<div>  
    <div class="row row-content">   <div class="col-5 col-sm-12">
<table class="table table-striped">
    <thead>
        <tr>
           
            <th> Name </th>
            <th> Contact </th>
            <th>  </th>
            <th> Email </th>
            <th>  </th>
            <th> Message </th>
             <th> Contacted On </th>

        </tr>
    </thead>
        <tbody>  {{#each thumb}} 

            <tr> 
               
           <td> {{#each this}}{{this.firstname}}&nbsp;{{this.lastname}}{{/each}} </td> 
               <td> {{#each this}}{{this.contact}}{{/each}}   </td><td>
                   <a role="button" class="btn btn-primary" href="tel:{{#each this}}{{this.contact}}{{/each}}"><i class="fa fa-phone">
                </i> Call</a> &nbsp;</td> 
               <td> {{#each this}}{{this.email}}{{/each}} </td><td>
                   <a role="button" class="btn btn-info" href="mailto:{{#each this}}{{this.email}}{{/each}}"><i class="fa fa-envelope-o"></i> 
                   Email</a> </td> 
               <td> {{#each this}}{{this.message}}{{/each}} </td> 
                <td> {{#each this}}{{this.date}}{{/each}} </td> 
                <td><form method="post" {{#each this}}action="/con/reduce/{{this._id}}"{{/each}}>
<button class="btn btn-success" type="submit">Contacted</button></form></td>
            </tr> 
             {{/each}}
          
    </tbody>
    
</table></div></div>
