<html>
    
   <body>
    <nav class="navbar navbar-dark navbar-expand-sm fixed-top">
         <div class="col-10 col-sm-10" style="text-align: center;">
      <h1 class="word"> User Login</h1></div> 
      <div class="col-2 col-sm-2">
      <a href="index.html" class="btn btn-primary">Back</a></div></nav>
        <div class="container">
    <div class="row row-content">
        {{#if success}}<div class="col-md-9"><div class="alert alert-success"  role="alert">{{success}}</div></div>
            {{else}} {{#if error}}<div class="col-md-9"><div class="alert alert-danger"  role="alert">{{error}}</div></div>
            {{else}} {{#if message}}<div class="col-md-9"><div class="alert alert-danger"  role="alert">{{message}}</div></div>
            {{else}}{{/if}}{{/if}}{{/if}}
         <div class="col-12 col-md-10"> 
             <form action="auth/login1" method="post">
                
                 <div class="form-group row">
                     <label for="email" class="col-md-2 col-form-label">Email</label>
                     <div class="col-10 col-md-9">
                         <input type="text" class="form-control" id="email" name="email" placeholder="Email" autofocus=true
                         pattern="[a-zA-Z0-9!#$%&'*+\/=?^_`{|}~.-]+@[a-zA-Z0-9-]+(\.[a-zA-Z0-9-]+)*" title="Please enter your email-id" required>
                     </div> 
                    </div> 
                    <div class="form-group row">
                        <label for="password" class="col-md-2 col-form-label">Password</label>
                        <div class="col-10 col-md-9">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" autofocus=true
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="Please enter your password" required>
                        </div> <div class="col-1 col-md-1"><img src="eye.png" style="width: 30px;" onmouseover="mouseoverPass();" onmouseout="mouseoutPass();" />
                        </div> 
                       </div> 
                   
                     
                         
                         <div class="form-group row">
                             <div class="offset-md-2 col-md-7">
                                 <input type="submit" value="Submit" name="Submit" class="btn btn-primary">
                             </div> <a href="/forgot">Forgot Password </a> 
                         </div>

                  
             </form>
         </div>
         
    </div> </div>
    
    <script>
    function mouseoverPass(obj) {
  var obj = document.getElementById('password');
  obj.type = "text";
}
function mouseoutPass(obj) {
  var obj = document.getElementById('password');
  obj.type = "password";
}</script>

    <script src="jquery/dist/jquery.slim.min.js"></script>
    <script src="popper.js/dist/umd/popper.min.js"></script>
    <script src="bootstrap/dist/js/bootstrap.min.js"></script>
   </body>
</html>