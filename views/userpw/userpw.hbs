<!DOCTYPE html>
<html>
   <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
    
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="C:/Users/Admin/web1/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/css/styles.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/bootstrap-social/bootstrap-social.css">
        
    </head>
   <body>
    <nav class="navbar navbar-dark navbar-expand-sm fixed-top">
        <div class="col-12 col-sm-12" style="text-align: center;">
      <h1 class="word"> Change Password&nbsp;<img src="passw.png" style="width: 40px;"></h1></div> </nav>
        <div class="container">
    <div class="row row-content">
        {{#if success}}<div class="col-md-11"><div class="alert alert-success"  role="alert">{{success}}</div></div>
            {{else}} {{#if error}}<div class="col-md-11"><div class="alert alert-danger"  role="alert">{{error}}</div></div>
            {{else}}{{/if}}{{/if}}
         <div class="col-12 col-sm-12">
             <form name="myForm1" action="/userpass/pass2" method="post">
                    <div class="form-group row">
                        <label for="password" class="col-md-2 col-form-label">Current Password</label>
                        <div class="col-9 col-md-9">
                            <input type="password" class="form-control" id="current" name="current" placeholder="Enter Current Password" autofocus=true
                             value="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="Please enter your current password" required>
                        </div> <div class="col-1 col-md-1"><img src="eye.png" style="width: 30px;" onmouseover="mouseoverPass();" onmouseout="mouseoutPass();" />
                       </div> 
                       </div> 
                      <div class="form-group row">
                        <label for="password" class="col-md-2 col-form-label">New Password</label>
                        <div class="col-9 col-md-9">
                            <input type="password" class="form-control" id="new" name="new" placeholder="Enter New Password" autofocus=true
                             value="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                        </div><div class="col-1 col-md-1"><img src="eye.png" style="width: 30px;" onmouseover="mouseoverPass1();" onmouseout="mouseoutPass1();" />
                       </div> </div> 
                        <div class="form-group row">
                        <label for="password" class="col-md-2 col-form-label">Confirm Password</label>
                        <div class="col-9 col-md-9">
                            <input type="password" class="form-control" id="confirm" name="confirm" placeholder="Confirm New Password" autofocus=true
                             value="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="Please enter your new password again for confirmation" required>
                        </div> <div class="col-1 col-md-1"><img src="eye.png" style="width: 30px;" onmouseover="mouseoverPass2();" onmouseout="mouseoutPass2();" />
                       </div> 
                       </div> 
                     
                         
                         <div class="form-group row">
                             <div class="offset-md-2 col-md-10">
                                 <button type="submit"  class="btn btn-primary"> Submit </button>
                                 
                             </div>
                         </div>

                  
             </form>
         </div>
         
    </div> </div>
    <script>
    function mouseoverPass(obj) {
  var obj = document.getElementById('current');
  obj.type = "text";
}
function mouseoutPass(obj) {
  var obj = document.getElementById('current');
  obj.type = "password";
}

function mouseoverPass1(obj) {
  var obj = document.getElementById('new');
  obj.type = "text";
}
function mouseoutPass1(obj) {
  var obj = document.getElementById('new');
  obj.type = "password";
}
function mouseoverPass2(obj) {
  var obj = document.getElementById('confirm');
  obj.type = "text";
}
function mouseoutPass2(obj) {
  var obj = document.getElementById('confirm');
  obj.type = "password";
}

</script>


    <script src="C:/Users/Admin/web1/jquery/dist/jquery.slim.min.js"></script>
    <script src="C:/Users/Admin/web1/popper.js/dist/umd/popper.min.js"></script>
    <script src="C:/Users/Admin/web1/bootstrap/dist/js/bootstrap.min.js"></script>
   </body>
   
</html>