<!DOCTYPE html>
<html>
   <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
    
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="C:/Users/Admin/web1/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/css/styles.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/bootstrap-social/bootstrap-social.css">
        
    </head>
   <body>
    <nav class="navbar navbar-dark navbar-expand-sm fixed-top"><div class="col-sm-1"></div>
        <div class="col-12 col-sm-9" style="text-align: center;">
      <h1 style="color:white"> Create Account &nbsp;<img src="signup.png" style="width: 40px;"> </h1></div> </nav>
        <div class="container">
    <div class="row row-content">
        {{#if error}} <div class="col-md-9"><div class="alert alert-danger"  role="alert">{{error}}</div></div>{{/if}}
         <div class="col-12 col-md-10">
             <form name="myForm" action="/employee" method="post">
                 <div class="form-group row">
                     <label for="firstname" class="col-md-2 col-form-label">First Name</label>
                     <div class="col-10 col-md-9">
                         <input type="text" class="form-control" id="firstname" name="firstname" placeholder="First Name" autofocus=true
                         value="{{employee.firstname}}" title="Please enter your firstname consisting only alphabets"
                         pattern="[a-zA-Z]+" required>
                     </div> </div> 
                     <div class="form-group row">
                     <label for="lastname" class="col-md-2 col-form-label">Last Name</label>
                     <div class="col-10 col-md-9">
                         <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Last Name" autofocus=true
                         value="{{employee.lastname}}" pattern="[a-zA-Z]+" title="Please enter your lastname consisting only alphabets" required>
                     </div>
                 </div>
                 <div class="form-group row">
                     <label for="contact" class="col-12 col-md-2 col-form-label">Contact</label>
                     <div class="col-10 col-md-9">
                         <input type="text" class="form-control" id="contact" name="contact" placeholder="Contact No." maxlength="10" autofocus=true
                         value="{{employee.contact}}" pattern="[0-9]{10}" title="Please enter your 10-digit contact number" required>
                     </div>
                 </div>
                 <div class="form-group row">
                     <label for="email" class="col-md-2 col-form-label">Email</label>
                     <div class="col-10 col-md-9">
                         <input type="text" class="form-control" id="email" name="email" placeholder="Email" autofocus=true
                         value="{{employee.email}}" title="Please enter your email-id"
                         pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?"  required>
                     </div> 
                    </div> 
                    <div class="form-group row">
                        <label for="password" class="col-md-2 col-form-label">Password</label>
                        <div class="col-10 col-md-9">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" autofocus=true
                             value="{{employee.password}}" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                        </div><div class="col-1 col-md-1"><img src="eye.png" style="width: 30px;" onmouseover="mouseoverPass();" onmouseout="mouseoutPass();" />
                        </div>  
                       </div> 
                     
                     
                         
                         <div class="form-group row">
                             <div class="offset-md-2 col-md-10">
                                 <button type="submit"  class="btn btn-primary"> Submit </button>
                                 
                             </div>
                         </div>

                  
             </form>
         </div>
         
    </div> </div>
     <script>
    function mouseoverPass(obj) {
  var obj = document.getElementById('password');
  obj.type = "text";
}
function mouseoutPass(obj) {
  var obj = document.getElementById('password');
  obj.type = "password";
}</script>

    <script src="C:/Users/Admin/web1/jquery/dist/jquery.slim.min.js"></script>
    <script src="C:/Users/Admin/web1/popper.js/dist/umd/popper.min.js"></script>
    <script src="C:/Users/Admin/web1/bootstrap/dist/js/bootstrap.min.js"></script>
   </body>
   
</html>